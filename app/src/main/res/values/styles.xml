<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="InputEditStyles">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginEnd" tools:targetApi="jelly_bean_mr1">50dp</item>
        <item name="android:layout_marginLeft">50dp</item>
        <item name="android:layout_marginRight">50dp</item>
        <item name="android:layout_marginStart" tools:targetApi="jelly_bean_mr1">50dp</item>
        <item name="android:background">@null</item>
        <item name="android:drawablePadding">26dp</item>
        <item name="android:textColorHint">@color/font_gray_b5</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="InputLineStyles">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:background">@color/gray_dc</item>
    </style>

    <style name="BtnStyles">
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">39dp</item>
        <item name="android:layout_marginLeft">40dp</item>
        <item name="android:layout_marginRight">40dp</item>
        <item name="android:background">@drawable/selector_corners_btn</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>
